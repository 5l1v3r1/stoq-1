"""
bin/stoq:

    Script to start application
"""
    
import sys
import gtk

from stoq.lib import i18n
from stoq.lib.stoqconfig import AppConfig



#
# Begin application
#



def run_application():
    APPNAME = "stoq"

    config = AppConfig(APPNAME)
    APPS = config.get_app_list()

    if len(sys.argv) < 2:
       raise SystemExit, \
         """Usage: stoq <application>. Valid applications are: %s""" % APPS

    appname = sys.argv[1].strip()
    if appname.endswith('/'):
        appname = appname[:-1]

    if not appname in APPS:
        raise SystemExit, \
            "'%s' is not an application. Valid applications are: %s" \
            % (appname, APPS)

    config.setup_app(appname, splash=True)

    module = __import__("stoq.gui.%s.app" % appname, globals(), locals(), appname)
    if not hasattr(module, "main"):
        raise RunTimeError, "Application %s must have a app.main() function"

    if not 'noexec' in sys.argv:
        module.main(config)

    gtk.main()
    config.log("Shutting down application")


run_application()
    
