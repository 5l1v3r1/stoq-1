""" A debug session for domain objects.  """

import sys
import code
try:
    import readline
except ImportError:
    print "Module readline not available."
else:
    import rlcompleter
    readline.parse_and_bind("tab: complete")

from kiwi.component import provide_utility
from stoq.lib.configparser import StoqConfig
from stoq.lib.startup import setup, get_option_parser
from sqlobject import *
from sqlobject.sqlbuilder import *

parser = get_option_parser()
config = StoqConfig()

options, args = parser.parse_args(sys.argv)
setup(config, options)

from stoqlib.database.admin import USER_ADMIN_DEFAULT_NAME
from stoqlib.database.runtime import get_connection, new_transaction
from stoqlib.database.tables import get_table_types
from stoqlib.domain.base import *
from stoqlib.domain.person import PersonAdaptToUser
from stoqlib.domain.interfaces import *
from stoqlib.lib.parameters import sysparam
from stoqlib.lib.interfaces import ICurrentUser

conn = new_transaction()

#provide_utility(ICurrentUser, PersonAdaptToUser.select(
#    PersonAdaptToUser.q.username == USER_ADMIN_DEFAULT_NAME,
#    connection=conn)[0])

names = []
for table in get_table_types():
    table_name = table.__name__
    locals()[table_name] = table
    names.append(table_name)

locals()['conn'] = conn
names.sort()

def get_person():
    return Person(name='a person', connection=conn)

if 'tables' in sys.argv:
    print "Available tables:", ', '.join(names)
elif len(sys.argv) > 1:
    stmt = sys.argv[1]
    exec stmt
    raise SystemExit
code.interact(local=globals())
