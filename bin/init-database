""" Script to delete all the tables in an existent database or simple
    create all the tables in an empty database. Note that you must have a
    database already created to run this script properly.
"""

import os
import sys

from stoqlib.lib.runtime import set_verbose

from stoq.main import setup_environment


TEST_MODE = '-t' in sys.argv
VERBOSE = '-v' in sys.argv


def main(args):
    set_verbose(VERBOSE)
    setup_environment(verbose=VERBOSE, force_init_db=True,
                      test_mode=TEST_MODE)

    if '-e' in args:
        from stoqlib.domain.examples.createall import create
        create()

if __name__ == "__main__":
    sys.exit(main(sys.argv))
