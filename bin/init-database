""" Script to delete all the tables in an existent database or simple
    create all the tables in an empty database. Note that you must have a
    database already created to run this script properly.
"""

import sys

from stoq.lib.configparser import StoqConfig
from stoq.lib.startup import setup, get_option_parser

def main(args):
    parser = get_option_parser()
    parser.add_option('-e', '--create-examples',
                      action='store_true',
                      dest='create_examples')
    options, args = parser.parse_args(args)
    options.clean = True

    config = StoqConfig()
    config.check_connection()
    setup(config, options)

    if options.create_examples:
        from stoqlib.domain.examples.createall import create
        create()

if __name__ == "__main__":
    sys.exit(main(sys.argv))
