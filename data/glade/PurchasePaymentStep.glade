<?xml version="1.0" standalone="no"?> <!--*- mode: xml -*-->
<!DOCTYPE glade-interface SYSTEM "http://gazpacho.sicem.biz/gazpacho-0.1.dtd">
<glade-interface domain="stoqlib">
    <widget class="GtkWindow" id="PurchasePaymentStep">
        <property name="border_width">5</property>
        <property name="default_height">250</property>
        <property name="default_width">440</property>
        <child>
            <widget class="GtkVBox" id="main_box">
                <property name="border_width">5</property>
                <property name="spacing">5</property>
                <property name="visible">True</property>
                <child>
                    <widget class="GtkHBox" id="payment_method_hbox">
                        <property name="border_width">5</property>
                        <property name="spacing">5</property>
                        <property name="visible">True</property>
                        <child>
                            <widget class="ProxyLabel" id="kiwilabel1">
                                <property name="data_type">unicode</property>
                                <property name="label" context="yes" translatable="yes">Payment Method:</property>
                                <property name="model_attribute">kiwilabel1</property>
                                <property name="visible">True</property>
                                <property name="xalign">1.0</property>
                            </widget>
                        </child>
                        <child>
                            <widget class="ProxyComboEntry" id="method_combo">
                                <property name="data_type">object</property>
                                <property name="model_attribute">method_combo</property>
                                <property name="visible">True</property>
                            </widget>
                            <packing>
                                <property name="position">1</property>
                            </packing>
                        </child>
                        <child>
                            <widget class="ProxyLabel" id="kiwilabel2">
                                <property name="data_type">unicode</property>
                                <property name="model_attribute"></property>
                                <property name="visible">True</property>
                            </widget>
                            <packing>
                                <property name="position">2</property>
                            </packing>
                        </child>
                    </widget>
                    <packing>
                        <property name="expand">False</property>
                    </packing>
                </child>
                <child>
                    <widget class="GtkEventBox" id="method_slave_holder">
                        <property name="visible">True</property>
                        <property name="visible_window">False</property>
                        <child>
                            <placeholder/>
                        </child>
                    </widget>
                    <packing>
                        <property name="position">1</property>
                    </packing>
                </child>
                <child>
                    <widget class="GtkHBox" id="hbox1">
                        <property name="border_width">5</property>
                        <property name="spacing">5</property>
                        <property name="visible">True</property>
                        <child>
                            <widget class="ProxyLabel" id="kiwilabel3">
                                <property name="data_type">unicode</property>
                                <property name="label" context="yes" translatable="yes">Subtotal:</property>
                                <property name="model_attribute">kiwilabel3</property>
                                <property name="visible">True</property>
                                <property name="xalign">1.0</property>
                            </widget>
                        </child>
                        <child>
                            <widget class="ProxyLabel" id="subtotal_lbl">
                                <property name="data_type">currency</property>
                                <property name="label" context="yes" translatable="yes">0.00</property>
                                <property name="model_attribute">purchase_subtotal</property>
                                <property name="visible">True</property>
                                <property name="xalign">1.0</property>
                            </widget>
                            <packing>
                                <property name="expand">False</property>
                                <property name="position">1</property>
                            </packing>
                        </child>
                    </widget>
                    <packing>
                        <property name="expand">False</property>
                        <property name="position">2</property>
                    </packing>
                </child>
                <child>
                    <widget class="GtkHBox" id="hbox7">
                        <property name="border_width">5</property>
                        <property name="spacing">5</property>
                        <property name="visible">True</property>
                        <child>
                            <widget class="ProxyLabel" id="kiwilabel5">
                                <property name="data_type">unicode</property>
                                <property name="label" context="yes" translatable="yes">Total:</property>
                                <property name="model_attribute">kiwilabel5</property>
                                <property name="visible">True</property>
                                <property name="xalign">1.0</property>
                            </widget>
                        </child>
                        <child>
                            <widget class="ProxyLabel" id="total_lbl">
                                <property name="data_type">currency</property>
                                <property name="label" context="yes" translatable="yes">0.00</property>
                                <property name="model_attribute">purchase_total</property>
                                <property name="visible">True</property>
                                <property name="xalign">1.0</property>
                            </widget>
                            <packing>
                                <property name="expand">False</property>
                                <property name="position">1</property>
                            </packing>
                        </child>
                    </widget>
                    <packing>
                        <property name="expand">False</property>
                        <property name="position">3</property>
                    </packing>
                </child>
            </widget>
        </child>
    </widget>
</glade-interface>
